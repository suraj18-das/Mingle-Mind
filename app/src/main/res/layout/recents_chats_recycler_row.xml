<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/edittext_bg_round"
    android:layout_margin="@dimen/_10dp"
    android:elevation="@dimen/_5dp">

    <include layout="@layout/profile_pic_view"
        android:layout_width="@dimen/_52dp"
        android:layout_height="@dimen/_52dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sp"
                android:textColor="@color/black"
                android:id="@+id/recyle_usaername"
                tools:text="Username"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hh:mm:ss"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_12dp"
                android:id="@+id/last_message_time"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="hello this is the last message"
            android:id="@+id/last_message_text"
            />
    </LinearLayout>

</LinearLayout>