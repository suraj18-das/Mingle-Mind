<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/_150dp"
        android:background="@drawable/edittext_bg_round"
        android:backgroundTint="@color/Primary_Color_mint"
        android:padding="8dp"
        android:layout_marginEnd="@dimen/_80dp"
        android:id="@+id/left_chat_layout"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            android:textSize="@dimen/_18sp"
            android:id="@+id/left_chat_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/_150dp"
        android:background="@drawable/edittext_bg_round"
        android:backgroundTint="@color/chat_reciver"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_marginStart="@dimen/_80dp"
        android:id="@+id/right_chat_layout"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sp"
            android:id="@+id/right_chat_text"

            />
    </LinearLayout>

</RelativeLayout>